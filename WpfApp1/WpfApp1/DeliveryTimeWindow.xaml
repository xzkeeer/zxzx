<Window x:Class="WpfApp1.DeliveryTimeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Delivery Time Calculator" Height="250" Width="500">
    <Grid>
        
        <TextBlock Text="Дистанция km:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox Name="DistanceTextBox" Width="150" HorizontalAlignment="Left" Margin="0,101,0,89" BorderBrush="Black" BorderThickness="1"/>


        <TextBlock Text="Скорость km/h:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,80,0,0"/>
        <TextBox Name="SpeedTextBox" Width="150" HorizontalAlignment="Left" Margin="0,31,0,159" BorderBrush="Black" BorderThickness="1"/>


        <Button Content="Посчитать" Name="CalculateButton" Width="150" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,160,0,0" Click="CalculateButton_Click"/>


        <TextBlock Name="ResultTextBlock" Text="Результат: " HorizontalAlignment="Left" VerticalAlignment="Top" Margin="200,40,0,0" FontSize="14"/>

 
        <Button Content="Назад" Name="BackButton" Width="100" Height="30" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,160,10,0" Click="Back_Click"/>
    </Grid>
</Window>
